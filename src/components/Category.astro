---
import { Image } from "astro:assets";
interface Props {
    imgSrc?: any;
    text: string;
    link: string;
    extraClass?: string;
}

const { imgSrc, text, link, extraClass } = Astro.props;
---

<a href={link} class="m-5 block rounded-tr-3xl">
    <Image
        src={imgSrc}
        alt=""
        width={400}
        height={400}
        class="h-80 active:scale-90 bg-white transition-all duration-75 rounded-bl-3xl rounded-tr-3xl border border-gray-300 object-cover"
    />

    <div class="p-4 text-center">
        <strong class="text-2xl font-medium text-gray-900">
            {text}
        </strong>

        <span
            class="block rounded-md border border-indigo-900 bg-indigo-900 px-5 py-3 text-sm font-medium uppercase tracking-widest text-white transition-colors hover:bg-white hover:text-indigo-900"
        >
            {Astro.url.pathname === "/" ? "See Brands" : "See Flavors"}
        </span>
    </div>
</a>
