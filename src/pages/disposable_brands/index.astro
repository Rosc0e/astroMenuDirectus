---
import Layout from "@layouts/Layout.astro";
import type { ProductEntry } from "src/lib/directus";
import { assetBaseUrl } from "src/lib/directus";
import ItemCategories from "@components/ItemCategories.astro";
const directusUrl = import.meta.env.VITE_DIRECTUS_URL || "http://directus:8055";

const res = await fetch(`${directusUrl}/items/disposables`, {
    method: "GET",
});

const items = await res.json();
console.log(items.data);
---

<Layout>
    <ItemCategories items={items} assetBaseUrl={assetBaseUrl} />
</Layout>
